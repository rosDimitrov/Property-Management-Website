<div class="container">
    <div class="row">


        <div class="margin-top-bottom text-center">
            <h2>Welcome back, Adelina!</h2>
            <h3>Please log in</h3>
        </div>
        @using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { @class = "col-sm-6 col-sm-push-3" })) 
        {
            @Html.AntiForgeryToken();


            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                <div>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                </div>
            </div>
            <div class="form-group margin-bottom">
                <div>
                    <input type="submit" value="Agent Log in" class="btn btn-default" />
                </div>
            </div>
        }

    </div>
</div>

        
       
       

  
 

